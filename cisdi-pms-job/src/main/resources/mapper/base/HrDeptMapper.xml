<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cisdi.pms.job.mapper.base.HrDeptMapper">
    <resultMap id="HrDeptResult" type="com.cisdi.pms.job.domain.base.HrDept"></resultMap>

    <!--根据部门id查询名称，获取所有该名称的部门id-->
    <select id="getDeptIdByName" resultType="String">
        select GROUP_CONCAT(id) FROM hr_dept where name = (select name from hr_dept where id = #{deptId}) and status = 'AP'
    </select>
</mapper>
