<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cisdi.pms.job.mapper.base.HrDeptMapper">
    <resultMap id="HrDeptResult" type="com.cisdi.pms.job.domain.base.HrDept">
        <id property="id" column="id" />
        <result property="deptName" column="deptName" />
        <result property="deptId" column="deptId" />
        <result property="chiefUserId" column="chiefUserId" />
        <result property="adUserId" column="adUserId" />
    </resultMap>

    <!--通过自定义sql信息查询单条部门信息-->
    <select id="selectBySql" resultMap="HrDeptResult">
        ${sql}
    </select>

    <!--根据部门id查询名称，获取所有该名称的部门id-->
    <select id="getDeptIdByName" resultType="String">
        select GROUP_CONCAT(id) FROM hr_dept where name = (select name from hr_dept where id = #{deptId}) and status = 'AP'
    </select>

    <!--根据用户id获取所属部门信息-->
    <select id="queryIdByUserId" resultType="String">
        select
            hr_dept_id as deptId
        from
            hr_dept_user
        where
            ad_user_id = #{userId}
            and sys_true = 1
        order by CRT_DT desc
        limit 1
    </select>

    <!--根据父级id查询直接子级id-->
    <select id="getDeptIdByParentId" resultMap="HrDeptResult">
        select id,name as deptName from hr_dept where hr_dept_pid = #{parentId}
    </select>

    <!--通过id查询部门信息-->
    <select id="getHrDeptById" resultMap="HrDeptResult">
        select id,name as deptName from hr_dept where id = #{deptId}
    </select>

    <!--通过部门名称查询部门用户信息-->
    <select id="getDeptUserByDeptNameList" resultType="String">
        select
            distinct
            a.ad_user_id as adUserId
        from
            hr_dept_user a
        left join ad_user b on a.ad_user_id = b.id
        where
            a.status = 'ap'
            and b.status = 'ap'
            and a.hr_dept_id in
        <foreach collection="list" index="index" item="item" close=")" open="(" separator=",">
            #{item}
        </foreach>
    </select>
</mapper>
